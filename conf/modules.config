        publishDir       = [
            enabled: "${params.save_debug}",
            mode: "${params.publish_dir_mode}",
            path: { "${params.outdir}/combined/selectedsnpsfiltered" },
            pattern: "*{vcf.gz,vcf.gz.tbi}"
